@model ClinicaWeb.Models.DTOs.VMUsuarioLogin;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login -Admin de Citas Medicas</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="~/lib/fontawesome/all.js"></script>
</head>
<style>
    body {
        margin: 0;
        height: 100vh;
        background-image: url('https://wallpapers.com/images/high/blue-earth-medical-doctor-k0v1mf9ac0z2fo5b.webp');
        background-size: cover; /* Ajusta la imagen para cubrir todo el fondo */
        background-position: center; /* Centra la imagen */
        background-repeat: no-repeat; /* Evita que la imagen se repita */
    }
</style>

<body class="bg-info">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                
                <div class="container">
                    
                    <div class="row justify-content-center">  <!--ANTES CENTER-->
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">

                                <div class="card-header"><h3 class="text-center font-weight-dark my-4">Login</h3></div>
                               
                                
                                <div style="float:left; padding: 0px">
                                    <img src="https://agn.gt/wp-content/uploads/2023/01/puesto-de-salud-e1673455546642-750x375.jpeg"
                                         height="200" ; width="525" />
                                </div>
                                
                                <div style="padding: 20px" class="card-body">
                                    
                                    <form asp-controller="Acceso" asp-action="Login" method="post">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" type="text" placeholder="No. Identificacion" asp-for="DocumentoIdentidad" required />
                                            <label for="inputEmail">No. Identificación CUI (DPI)</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" type="password" placeholder="Contraseña" asp-for="Clave" required />
                                            <label for="inputPassword">Contraseña</label>
                                        </div>
                                        @if (ViewData["Mensaje"] != null)
                                        {
                                            <div class="form-group">
                                                <div class="alert alert-danger" role="alert">
                                                    @ViewData["Mensaje"]
                                                </div>
                                            </div>
                                        }

                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <button type="submit" class="btn btn-success">Iniciar Sesión</button>
                                        </div>
                                    </form>

                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a asp-controller="Acceso" asp-action="Registrarse">Necesitas una cuenta? Registrate!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Walter7 -UMG- 2024</div>
                        <div>
                            <a href="#">Politicas privadas- Citas, Centro de Salud</a>
                            &middot;
                            <a href="#">Terminos y Condiciones</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/scripts.js"></script>
</body>
</html>
